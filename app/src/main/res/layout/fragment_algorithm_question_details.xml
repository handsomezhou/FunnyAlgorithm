<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <com.handsomezhou.funnyalgorithm.view.NavigationBarLayout
            android:id="@+id/navigation_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/question_text_view"
                style="@style/text_view_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/list_item_height"
                android:textColorLink="@color/blue"
                android:textIsSelectable="true"
                android:textSize="@dimen/prompt_large_text_size"/>

            <TextView
                android:id="@+id/question_description_text_view"
                style="@style/text_view_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/list_item_height"
                android:textIsSelectable="true"
                android:textSize="@dimen/prompt_normal_text_size"/>


                <TextView
                    android:id="@+id/reference_solution_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:padding="@dimen/padding"
                    android:layout_gravity="right"
                    style="@style/text_view_style"
                    android:layout_alignParentBottom="true"
                    android:text="@string/reference_solution"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>