<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TextLoopScroll">
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="list_view_style">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:clickable">true</item>
        <item name="android:divider">@color/grey</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <style name="text_view_style">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/dim_grey</item>
    </style>

    <style name="edit_text_style">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/dim_grey</item>
    </style>


    <style name="btn_style">
        <item name="android:background">@drawable/btn_blue_selector</item>
        <item name="android:textSize">@dimen/prompt_large_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding2x</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dialog_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/prompt_normal_text_size_item_height</item>
        <item name="android:layout_marginLeft">@dimen/margin_left4x</item>
        <item name="android:layout_marginRight">@dimen/margin_left4x</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">@dimen/padding_left2x</item>
        <item name="android:paddingRight">@dimen/padding_right2x</item>
        <item name="android:background">@drawable/btn_white_selector</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/prompt_large_text_size</item>
    </style>

    <style name="dividing_line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/grey</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="dividing_line_vertical">
        <item name="android:layout_width">1px</item>
        <item name="android:background">@color/grey</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- start: dialog -->


    <!-- http://stackoverflow.com/questions/21957263/why-the-background-of-progressdialog-doesnt-set-to-the-transparent -->
    <!-- http://stackoverflow.com/questions/21477484/how-to-remove-transparent-dark-background-outside-of-dialog-box -->
    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/transparent</item>
        <item name="android:bottomDark">@color/transparent</item>
        <item name="android:bottomMedium">@color/transparent</item>
        <item name="android:centerBright">@color/transparent</item>
        <item name="android:centerDark">@color/transparent</item>
        <item name="android:centerMedium">@color/transparent</item>
        <item name="android:fullBright">@color/transparent</item>
        <item name="android:fullDark">@color/transparent</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
    </style>

    <style name="progress_dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/grey21_transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <!-- <item name="android:textSize">12sp</item> -->
    </style>

    <style name="dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textCursorDrawable">@null</item>
        <!-- <item name="android:textSize">12sp</item> -->
    </style>
    <!-- end: dialog -->

</resources>
